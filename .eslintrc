{
	"env": {
		"node": true,
		"browser": true,
		"jest": true,
		"es6": true
	},
	"parser": "babel-eslint",
	"extends": [
		"eslint:recommended",
		"plugin:jest/recommended",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "prettier", "jest"],
	"settings": {
		"react": {
			"pragma": "React",
			"version": "^16.8"
		}
	},
	"rules": {
		"no-console": 1,
		"react/jsx-uses-vars": 2,
		"indent": [
			"error",
			2,
			{
				"SwitchCase": 1
			}
		],
		"react/jsx-indent": ["error", 2],
		"react/jsx-indent-props": ["error", 2],
		"linebreak-style": 0,
		"semi": ["error", "always"],
		"react/display-name": 0
	}
}
